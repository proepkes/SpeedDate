    SmtpPort="587" 
    SmtpUsername="MySmtpUsername@gmail.com" 
    SmtpPassword="MySmtpPassword" 
    SenderDisplayName="MySenderDisplayName" 
    EmailFrom="MySenderEmail@gmail.com"/>

  <SpawnerConfig
    QueueUpdateFrequency="100"
    EnableClientSpawnRequests="true"
    CreateSpawnerPermissionLevel="0" />

  <LobbiesConfig LobbyFiles="OneVsOne;TwoVsTwo" />

  <DatabaseConfig
    CheckConnectionOnStartup="false"
    Host="localhost" 
    Port="26257" 
    Username="root" 
    Password="" 
    Database="speeddate" />

