<configuration>
  <Network Address="0.0.0.0" Port="60125" />
  <Plugins IncludeDlls="SpeedDate*" Namespaces="*" />

  <AuthConfig
    EnableGuestLogin="true"
    GuestPrefix="Guest-"
    PeerDataPermissionsLevel="0"
    UsernameMinChars="3"
    UsernameMaxChars="12"
    ConfirmEmailBody="&lt;h1&gt;Activation&lt;/h1&gt;&lt;p&gt;Your email activation code is: &lt;b&gt;{0}&lt;/b&gt; &lt;/p&gt;" 
    PasswordResetEmailBody="&lt;h1&gt;Password Reset Code&lt;/h1&gt;&lt;p&gt;Your password reset code is: &lt;b&gt;{0}&lt;/b&gt; &lt;/p&gt;" />

  <MailConfig
